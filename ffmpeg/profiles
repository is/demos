# --- profile 265.0 x265,cr28,960x540
ffmpeg -hide_banner -y \
 -c:v libx265 \
 -vf scale=-1:540 \
 -crf 28 -preset slow  -tune ssim \
 -profile:v main \
 -c:a aac -b:a 128k


# -- profile 264v1 x264,cr23
ffmpeg -hide_banner -y
 -c:v libx264 -crf 23 \
 -preset slow -tune animation \
 -profile:v main -c:a aac -b:a 128k  \
 -b:v 1M -minrate 1M -maxrate 1M -bufsize 4M
